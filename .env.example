# Environment Configuration
NODE_ENV=production
PORT=8080

# Database Configuration (Required for authentication features)
DATABASE_URL=mysql://username:password@localhost:3306/llmmux

# JWT Authentication (Required for user authentication)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Backend Configuration
# Option 1: Manual configuration (legacy)
# Format: model-name:host:port,model-name:host:port
# Example: BACKENDS=qwen3-30b:localhost:8000,qwen3-8b:localhost:8001,gpt-oss-20b:localhost:8002
BACKENDS=model-name:localhost:8000,another-model:localhost:8001

# Option 2: Auto-discovery from vLLM servers (recommended)
# Format: host:port,host:port
# LLMMux will automatically discover available models from these vLLM servers
# Example: VLLM_SERVERS=localhost:8000,localhost:8001,localhost:8002
# VLLM_SERVERS=localhost:8000,localhost:8001

# CORS Configuration (optional)
ENABLE_CORS=true
CORS_ORIGIN=*

# Health Check Configuration (optional)
HEALTH_CHECK_INTERVAL=30000

# MySQL Database Configuration (for Docker Compose)
MYSQL_ROOT_PASSWORD=llmmux_root_password
MYSQL_DATABASE=llmmux
MYSQL_USER=llmmux_user
MYSQL_PASSWORD=llmmux_password
